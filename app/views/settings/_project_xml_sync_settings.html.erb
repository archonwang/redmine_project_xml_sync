<%= content_tag :p do %>
  <%= content_tag :label, "region" %>
  <%= select_tag('settings[region]', options_for_select(Holidays.regions, @settings['region'])) %>
<% end %>
<%= content_tag :p do %>
  <%= content_tag :label, t('.tracker_alias') %>
  <%= text_field_tag 'settings[tracker_alias]', @settings[:tracker_alias] %>
<% end %>
<%= content_tag :p do %>
  <%= content_tag :label, t('.redmine_id_alias') %>
  <%= text_field_tag 'settings[redmine_id_alias]', @settings[:redmine_id_alias] %>
<% end %>
<%= content_tag :p do %>
  <%= content_tag :label, t('.redmine_status_alias') %>
  <%= text_field_tag 'settings[redmine_status_alias]', @settings[:redmine_status_alias] %>
<% end %>
<%= content_tag :p do %>
  <%= content_tag :label, t('.redmine_version') %>
  <%= text_field_tag 'settings[redmine_version_alias]', @settings[:redmine_version_alias] %>
<% end %>
<%= content_tag :p do %>
  <%= content_tag :label, t('.redmine_category') %>
  <%= text_field_tag 'settings[redmine_category_alias]', @settings[:redmine_category_alias] %>
<% end %>

<%= content_tag :fieldset, class: 'box' do %>
  <%= content_tag :legend, t('.import_settings') %>
  <%= content_tag :p do %>
    <%= content_tag :label, t('.default_tracker') %>
    <%= select_tag "settings[import][tracker_id]", options_from_collection_for_select(Tracker.all, :id, :name, selected: @settings[:import][:tracker_id]) %>
  <% end %>
  <%= content_tag :p do %>
    <%= content_tag :label, t('.default_issue_status') %>
    <%= select_tag "settings[import][issue_status_id]", options_from_collection_for_select(IssueStatus.all, :id, :name, selected: @settings[:import][:issue_status_id]) %>
  <% end %>
  <%= content_tag :fieldset, class: 'box' do %>
    <%= content_tag :legend, t('.ignore_fields') %>
    <%= loader_setting_checkbox(:import, :ignore_fields, :estimated_hours) %>
    <%= loader_setting_checkbox(:import, :ignore_fields, :priority) %>
    <%= loader_setting_checkbox(:import, :ignore_fields, :description) %>
    <%= loader_setting_checkbox(:import, :ignore_fields, :done_ratio) %>
    <%= loader_setting_checkbox(:import, :ignore_fields, :version) %>
    <%= loader_setting_checkbox(:import, :ignore_fields, :category) %>
  <% end %>
<% end %>

<%= content_tag :fieldset, class: 'box' do %>
  <%= content_tag :legend, t('.export_settings') %>
  <%= content_tag :fieldset, class: 'box' do %>
    <%= content_tag :legend, t('.ignore_fields') %>
    <%= loader_setting_checkbox(:export, :ignore_fields, :estimated_hours) %>
    <%= loader_setting_checkbox(:export, :ignore_fields, :priority) %>
    <%= loader_setting_checkbox(:export, :ignore_fields, :description) %>
    <%= loader_setting_checkbox(:export, :ignore_fields, :done_ratio) %>
  <% end %>
<% end %>

<%= content_tag :p do %>
  CSV default encoding
  <%= select_tag "settings[csv_encoding]", options_for_select({:UTF8 => "U", :SJIS => "S"}, @settings[:csv_encoding]) %>
<% end %>
